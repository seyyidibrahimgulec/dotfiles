                                            "--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%A / %_d %B %Y %H:%M:%S" "date" 10
                    , Run Volume "default" "Master" [] 10
                    ]
       , sepChar = "%"
