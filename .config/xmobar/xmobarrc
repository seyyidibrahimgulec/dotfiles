       , commands = [ Run Battery ["-t","<acstatus> <left>%",
                                   "-L","20",
                                   "-H","50",
                                   "--normal","yellow",
                                   "--high","green",
                                   "--low","red"] 600
                    , Run CoreTemp ["-t","<core0>°C",
                                    "-H","60",
                                    "-L","40",
                                    "--normal","green",
                                    "--high","red",
                                    "--low","lightgreen"] 50
                    , Run Weather "LTBR" ["-t","<station>: <tempC>°C",
                                         "-L","18","-H","25",
                                         "--normal","green",
                                         "--high","red",
                                         "--low","lightblue"] 36000
                    , Run Network "lo" ["-L","0","-H","32",
